<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControlRegistro</servlet-name>
        <servlet-class>controlador.ControlRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlMantenimiento</servlet-name>
        <servlet-class>controlador.ControlMantenimiento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlReporte</servlet-name>
        <servlet-class>controlador.ControlReporte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlGrafico</servlet-name>
        <servlet-class>controlador.ControlGrafico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlMatricula</servlet-name>
        <servlet-class>controlador.ControlMatricula</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlRegistro</servlet-name>
        <url-pattern>/ControlRegistro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlMantenimiento</servlet-name>
        <url-pattern>/ControlMantenimiento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlReporte</servlet-name>
        <url-pattern>/ControlReporte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlGrafico</servlet-name>
        <url-pattern>/ControlGrafico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlMatricula</servlet-name>
        <url-pattern>/ControlMatricula</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
